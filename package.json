{
  "name": "typescript-template",
  "version": "2.0.0",
  "private": true,
  "description": "A template for TypeScript projects.",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx --watch src/index.ts",
    "clean": "rimraf dist/",
    "tsc": "tsc",
    "build": "npm-run-all clean tsc",
    "start": "node .",
    "check-types": "tsc --noEmit",
    "eslint": "eslint src/**/*.ts",
    "eslint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.{js,ts,json}'",
    "lint": "npm-run-all eslint check-types",
    "lint:fix": "npm-run-all eslint:fix check-types format",
    "prepare": "husky install"
  },
  "author": "haiiro2gou <mrashen.2gou@gmail.com>",
  "license": "MIT License",
  "homepage": "https://github.com/haiiro2gou/ts-template#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/haiiro2gou/ts-template.git"
  },
  "bugs": {
    "url": "https://github.com/haiiro2gou/ts-template/issues"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.15.0",
    "@haiiro2gou/eslint-config": "^1.4.2",
    "@stylistic/eslint-plugin": "^5.2.2",
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "dotenv": "^17.2.1"
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --cache --fix",
    "*.ts": "bash -c 'tsc --noEmit'",
    "*.{js,ts,json}": "prettier --write",
    "*.js": "eslint --cache --fix"
  }
}
